<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.CardViewStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/normal_offset</item>
        <item name="android:layout_margin">@dimen/normal_offset</item>
        <item name="cardCornerRadius">@dimen/normal_offset</item>
        <item name="cardElevation">@dimen/normal_offset</item>
    </style>

</resources>